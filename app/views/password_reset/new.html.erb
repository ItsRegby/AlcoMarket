<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-white text-center">
          <h1 class="m-0">Forgot Your Password?</h1>
        </div>
        <div class="card-body">
          <%= form_with url: password_reset_path do |form| %>
            <div class="form-group mb-3">
              <%= form.label :email, class: "font-weight-bold" %>
              <%= form.text_field :email, class: "form-control", placeholder: "Enter your email" %>
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <div class="text-center">
              <%= form.submit "Reset Password", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
