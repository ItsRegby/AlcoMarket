<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-white">
          <h1 class="text-center">Welcome Back!</h1>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: sign_in_path do |form| %>
            <div class="form-group mb-3">
              <%= form.label :email, class: "font-weight-bold" %>
              <%= form.text_field :email, class: "form-control", placeholder: "Enter your email" %>
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="form-group mb-3">
              <%= form.label :password, class: "font-weight-bold" %>
              <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
              <%= link_to "Forgot your password?", password_reset_path, class: "text-decoration-none" %>
            </div>
            <div class="text-center">
              <%= form.submit "Sign In", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
