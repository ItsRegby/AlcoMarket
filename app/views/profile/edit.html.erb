<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-white text-center">
          <h1 class="m-0">Edit Profile</h1>
        </div>
        <div class="card-body">
          <%= form_with model: @profile, url: profile_edit_path do |form| %>
            <div class="form-group mb-3">
              <%= form.label :full_name, class: "font-weight-bold" %>
              <%= form.text_field :full_name, class: "form-control", placeholder: "Enter your full name", required: true %>
            </div>
            <div class="form-group mb-3">
              <%= form.label :address, class: "font-weight-bold" %>
              <%= form.text_field :address, class: "form-control", placeholder: "Enter your address", required: true %>
            </div>
            <div class="form-group mb-4">
              <%= form.label :phone_number, class: "font-weight-bold" %>
              <%= form.text_field :phone_number, class: "form-control", placeholder: "Enter your phone number", required: true %>
            </div>

            <div class="text-center">
              <%= form.submit "Update Profile", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
