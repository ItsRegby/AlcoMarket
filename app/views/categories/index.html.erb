<div class="container">
  <div class="row justify-content-center">
    <div class="">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-white text-center py-3">
          <h1 class="m-0">Categories</h1>
        </div>
        <div class="row menu-items align-items-stretch p-4">
          <% @categories_items.each do |item| %>
            <div class="col-lg-3 p-3">
              <div class="menu-item card h-100 shadow-sm border-0">
                <div class="menu-item-image">
                  <% if item.image_base64.present? %>
                    <%= link_to menu_category_path(item.category_id) do %>
                      <%= image_tag("data:image/png;base64,#{item.image_base64}", alt: "Menu Item Image", class: "img-fluid rounded-top") %>
                    <% end %>
                  <% else %>
                    <%= link_to menu_category_path(item.category_id) do %>
                      <div class="placeholder-image bg-secondary rounded-top"></div>
                    <% end %>
                  <% end %>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                  <%= link_to menu_category_path(item.category_id), class: "stretched-link text-decoration-none text-dark" do %>
                    <h2 class="card-title text-center"><%= item.category_name %></h2>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
